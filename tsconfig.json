{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5",
    "moduleResolution": "Node",
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/client/",
    "isolatedModules": true,
  },
  "files": [
    "./src/pages/index.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": [
    "src/**/*.proto",
    "node_modules"
  ],
  "indent": [
    true,
    "spaces",
    4
  ]
}